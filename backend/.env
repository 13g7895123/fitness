# 伺服器 Port 設定
API_PORT=9103

# 資料庫 Port 設定
POSTGRES_PORT=9303

# 資料庫連線
ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=fitness_tracker;Username=postgres;Password=postgres

# LINE Login 設定
LineLogin__ChannelId=YOUR_CHANNEL_ID
LineLogin__ChannelSecret=YOUR_CHANNEL_SECRET
LineLogin__CallbackUrl=http://localhost:9103/api/v1/auth/line/callback

# JWT 設定
Jwt__SecretKey=this-is-a-secret-key-for-fitness-tracker-please-change-in-production
Jwt__Issuer=fitness-tracker-api
Jwt__Audience=fitness-tracker-client
Jwt__ExpiresInMinutes=1440

# 測試登入功能開關
EnableTestLogin=true

# Serilog 日誌
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# CORS (前端 Port)
FRONTEND_PORT=9203
Cors__AllowedOrigins=http://localhost:9202,http://localhost:9203

# 環境
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
