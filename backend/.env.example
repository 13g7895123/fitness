# 資料庫連線
ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=FitnessTracker;User Id=sa;Password=YOUR_PASSWORD;TrustServerCertificate=True

# LINE Login 設定
LineLogin__ChannelId=YOUR_CHANNEL_ID
LineLogin__ChannelSecret=YOUR_CHANNEL_SECRET
LineLogin__CallbackUrl=http://localhost:5000/api/v1/auth/line/callback

# JWT 設定
Jwt__SecretKey=YOUR_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG_PLEASE_CHANGE_THIS
Jwt__Issuer=FitnessTrackerApi
Jwt__Audience=FitnessTrackerClient
Jwt__ExpiresInMinutes=1440

# Serilog 日誌
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# CORS
Cors__AllowedOrigins=http://localhost:5173,http://localhost:5174

# 環境
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
