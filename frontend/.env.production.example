# Port 設定 (生產環境通常使用標準 port 80/443)
VITE_API_PORT=443
VITE_FRONTEND_PORT=443

# API Base URL
VITE_API_BASE_URL=https://api.yourdomain.com/api/v1

# App URL
VITE_APP_URL=https://yourdomain.com

# LINE Login
VITE_LINE_CHANNEL_ID=YOUR_PRODUCTION_CHANNEL_ID
VITE_LINE_CALLBACK_URL=https://yourdomain.com/auth/callback

# 使用 Mock 登入 (正式環境必須設為 false)
VITE_USE_MOCK_AUTH=false

# 啟用測試登入按鈕 (如需在生產環境展示，可設為 true)
VITE_ENABLE_TEST_LOGIN=true

# 環境
VITE_ENV=production
